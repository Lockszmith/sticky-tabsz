#!/usr/bin/env bash
# Pre-commit hook - validates commit message format and repo state
# Install with: git config core.hooksPath .githooks

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
REPO_ROOT="$(cd "$SCRIPT_DIR/.." && pwd)"

# Only check commit message format (quick check)
# Full test-repo.sh is too slow for pre-commit

echo "Running pre-commit checks..."

# Check for conventional commit message format
# This hook runs before the message is finalized, so we check staged files exist
staged_count=$(git diff --cached --name-only | wc -l)
if [[ $staged_count -eq 0 ]]; then
    echo "No files staged for commit"
    exit 1
fi

echo "âœ“ Pre-commit checks passed"
exit 0

