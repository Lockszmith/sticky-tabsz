{
  "manifest_version": 2,
  "name": "Sticky TabSZ",
  "version": "0.1.3",
  "author": "Lockszmith",
  "description": "Keeps specific URLs in a single sticky tab",
  "permissions": [
    "webNavigation",
    "tabs",
    "storage",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false,
    "browser_style": false
  },
  "browser_action": {
    "default_title": "Sticky TabSZ Settings",
    "default_popup": "popup.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "sticky-tabsz@code.lksz.me"
    }
  }
}
