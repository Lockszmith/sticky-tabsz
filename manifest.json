{
  "manifest_version": 2,
  "name": "Sticky TabSZ",
  "version": "0.1.6",
  "author": "Lockszmith",
  "description": "Keeps specific URLs in a single sticky tab",
  "homepage_url": "https://code.lksz.me/lksz/sticky-tabsz",
  "developer": {
    "name": "Lockszmith",
    "url": "https://code.lksz.me/lksz/sticky-tabsz"
  },
  "icons": {
    "48": "icons/icon.svg",
    "96": "icons/icon.svg"
  },
  "permissions": [
    "webNavigation",
    "tabs",
    "storage",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false,
    "browser_style": false
  },
  "browser_action": {
    "default_icon": "icons/icon.svg",
    "default_title": "Sticky TabSZ",
    "default_popup": "popup.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "sticky-tabsz@code.lksz.me",
      "strict_min_version": "91.0"
    }
  }
}
